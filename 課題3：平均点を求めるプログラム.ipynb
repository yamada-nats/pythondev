   "source": [
    "cnt = 0\n",
    "score_sum=0\n",
    "\n",
    "while True:\n",
    "    score = int(input(\"点数を入力してください：\"))\n",
    "    if score == -1:\n",
    "        break\n",
    "    \n",
    "    score_sum += score\n",
    "    cnt += 1\n",
    "\n",
    "score_ave = round(score_sum / cnt, 1)\n",
    "print(f\"{cnt}人のテストの平均点は{score_ave}点です\")"
   ]
  }
